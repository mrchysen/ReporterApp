<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush
        x:Key="PrimaryColorBrush"
        Color="#FFFFFF" />
    <SolidColorBrush
        x:Key="SecondaryColorBrush"
        Color="#F5F5F5" />
    <SolidColorBrush
        x:Key="BackgroundBrush"
        Color="#FAFAFA" />
    <SolidColorBrush
        x:Key="BorderBrush"
        Color="#E0E0E0" />

    <SolidColorBrush
        x:Key="FontColorBrush"
        Color="#212121" />
    <SolidColorBrush
        x:Key="SecondaryFontBrush"
        Color="#757575" />

    <SolidColorBrush
        x:Key="DefaultButtonBrush"
        Color="#FFFFFF" />
    <SolidColorBrush
        x:Key="ButtonBorderBrush"
        Color="#BDBDBD" />
    <SolidColorBrush
        x:Key="ButtonOnMouse"
        Color="#EEEEEE" />
    <SolidColorBrush
        x:Key="ButtonPressed"
        Color="#E0E0E0" />

    <SolidColorBrush
        x:Key="Success"
        Color="#4CAF50" />
    <SolidColorBrush
        x:Key="Alert"
        Color="#F44336" />

    <SolidColorBrush
        x:Key="AccentColor"
        Color="#9E9E9E" />
    <SolidColorBrush
        x:Key="HighlightBrush"
        Color="#ECEFF1" />
</ResourceDictionary>