<Window
    x:Class="ReporterApp.WindowApp.Windows.PictureDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:ReporterApp.WindowApp.Windows"
    mc:Ignorable="d"
    Title="PictureDialog" 
    Height="450" 
    Width="800">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <Border>
            <Image
                x:Name="Image"
                Source="../Imgs/plus.png">
                
            </Image>
        </Border>
        
        <Border
            Grid.Row="2"
            BorderBrush="Black"
            BorderThickness="0 1 0 0">

            <StackPanel
                Orientation="Horizontal">
                
                <Button
                    Margin="20 0 0 0"
                    Width="100"
                    Height="45"
                    FontSize="16">
                    Отменить
                </Button>
                
                <Button
                    Margin="20 0 0 0"
                    Width="100"
                    Height="45"
                    FontSize="16">
                    Сохранить
                </Button>

                <TextBlock 
                    VerticalAlignment="Center"
                    Margin="20 0 0 0"
                    FontSize="16">
                    Нажмите на плюс, чтобы вставить фотографию из буфера</TextBlock>
            </StackPanel>
            
            
        </Border>
    </Grid>
</Window>
