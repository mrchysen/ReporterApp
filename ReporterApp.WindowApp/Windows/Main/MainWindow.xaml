<Window
    x:Class="ReporterApp.WindowApp.Windows.Main.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:ReporterApp.WindowApp.Windows.Main"
    mc:Ignorable="d"
    Title="Отчётник v0.1"
    Height="450"
    Width="800"
    MinHeight="450"
    MinWidth="800">

    <Window.Resources>
        <Style 
            TargetType="MenuItem"
            x:Key="FirstMenuItem">
            <Setter
                Property="Background" 
                Value="{StaticResource SecondaryColorBrush}" />
        </Style>
    </Window.Resources>
    
    <Grid
        Background="{StaticResource PrimaryColorBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Menu
            Background="{StaticResource SecondaryColorBrush}"
            Height="24"
            FontSize="16">
            <MenuItem
                Style="{StaticResource FirstMenuItem}"
                Header="Файл">
                <MenuItem 
                    Click="OpenFileButton_Click"
                    Command="{Binding OpenReportCommand}"
                    Header="Открыть" />
                <MenuItem 
                    Click="CreateFileButton_Click" 
                    Header="Создать" />
                <MenuItem 
                    x:Name="SaveFileButton"
                    Command="{Binding SaveReportCommand}"
                    Header="Сохранить" />
                <MenuItem 
                    x:Name="CopyFileMenuButton"
                    Command="{Binding CopyToClipboardCommand}" 
                    Header="Скопировать в буфер обмена"/>
            </MenuItem>

            <MenuItem Header="Меню">
                <MenuItem
                    Command="{Binding OpenReportSettingsPageCommand}"
                    Header="Параметры отчёта" />
                <MenuItem
                    
                    Header="Машин"/>
                <MenuItem
                    Command="{Binding OpenReportPageCommand}"
                    Header="Отчёта"/>
                <Separator />
                <MenuItem
                    Command="{Binding ResetCarsCommand}"
                    Header="Отчистить машины" />
            </MenuItem>
        </Menu>

        <Frame
            Grid.Row="1"
            x:Name="Frame"
            NavigationUIVisibility="Hidden" />

    </Grid>
</Window>
