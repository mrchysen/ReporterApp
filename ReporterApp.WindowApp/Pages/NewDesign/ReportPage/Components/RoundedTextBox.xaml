<TextBox x:Class="ReporterApp.WindowApp.Pages.NewDesign.ReportPage.Components.RoundedTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ReporterApp.WindowApp.Pages.NewDesign.ReportPage.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <TextBox.Template>
        <ControlTemplate>
            <Border
                BorderThickness="{TemplateBinding BorderThickness}"
                CornerRadius="10 0 0 0"
                BorderBrush="{StaticResource FontColorBrush}"
                Background="{StaticResource DefaultButtonBrush}">
                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroup
                        x:Name="CommonStates">
                        <VisualState
                            x:Name="Normal" />
                        <VisualState
                            x:Name="MouseOver" />
                    </VisualStateGroup>
                </VisualStateManager.VisualStateGroups>
                <ScrollViewer
                    Margin="0"
                    x:Name="PART_ContentHost" />
            </Border>
        </ControlTemplate>
    </TextBox.Template>
</TextBox>
