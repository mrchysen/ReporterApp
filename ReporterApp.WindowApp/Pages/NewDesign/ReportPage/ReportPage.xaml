<Page
    x:Class="ReporterApp.WindowApp.Pages.NewDesign.ReportPage.ReportPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ReporterApp.WindowApp.Pages.NewDesign.ReportPage"
    xmlns:components="clr-namespace:ReporterApp.WindowApp.Pages.NewDesign.ReportPage.Components"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{StaticResource PrimaryColorBrush}"
    Foreground="{StaticResource FontColorBrush}"
    Title="ReportPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                MinWidth="256"
                Width="1*"/>
            <ColumnDefinition
                Width="Auto" />
            <ColumnDefinition
                Width="1*" />
        </Grid.ColumnDefinitions>

        <Border
            BorderBrush="{StaticResource FontColorBrush}"
            Margin="4 4 0 0"
            Padding="4 4 0 0"
            CornerRadius="10 0 0 0"
            BorderThickness="1 1 0 0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="1*" />
                    <ColumnDefinition
                        Width="1*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="32" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <TextBlock
                    VerticalAlignment="Center"
                    Padding="5"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Text="Отчёт"
                    Grid.ColumnSpan="2" />

                <components:RoundedTextBox
                    BorderThickness="1 1 0 0"
                    Margin="2,2,0,0"
                    Padding="4"
                    FontSize="14"
                    Grid.Row="1"
                    Text="{Binding ReportText}"
                    TextWrapping="Wrap"
                    IsReadOnly="True"
                    x:Name="TextBox"
                    Grid.ColumnSpan="2" />
            </Grid>
        </Border>

        <GridSplitter
            Width="3"
            Grid.Column="1"
            ShowsPreview="False"
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch" />

        <components:CarIteratorComponent
            x:Name="CarIteratorComponent"
            Grid.Column="2"/>
    </Grid>
</Page>
