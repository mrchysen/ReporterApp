<Page x:Class="ReporterApp.WindowApp.Pages.NewDesign.FileManagementPage.FileManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ReporterApp.WindowApp.Pages.NewDesign.FileManagementPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" 
      d:DesignWidth="800"
      Title="FileManagementPage">

    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="1*" />
                <ColumnDefinition
                    Width="2*" />
            </Grid.ColumnDefinitions>

            <Label
                FontSize="20"
                Margin="10"
                Content="Дата" />

            <DatePicker
                x:Name="DatePicker"
                VerticalAlignment="Center"
                Margin="10"
                Grid.Column="1"
                SelectedDate="{Binding ReportDate}"
                SelectedDateFormat="Short" />
        </Grid>
    </StackPanel>
</Page>
