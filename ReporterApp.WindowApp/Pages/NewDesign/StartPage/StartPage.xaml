<Page
    x:Class="ReporterApp.WindowApp.Pages.NewDesign.StartPage.StartPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ReporterApp.WindowApp.Pages.NewDesign.StartPage"
    xmlns:components="clr-namespace:ReporterApp.WindowApp.Pages.NewDesign.StartPage.Components"
    xmlns:vm="clr-namespace:ReporterApp.WindowApp.Pages.NewDesign.StartPage"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{StaticResource PrimaryColorBrush}"
    Foreground="{StaticResource FontColorBrush}"
    Title="StartPage">
    
    <Page.Resources>
        <Style TargetType="components:StartPageButton">
            <Setter
                Property="Padding"
                Value="10" />
            <Setter
                Property="Margin"
                Value="0 10 0 0" />
        </Style>
    </Page.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition 
                Width="3*" />
            <ColumnDefinition
                Width="5*" />
        </Grid.ColumnDefinitions>

        <StackPanel
            Margin="16 16 16 0">

            <Border
                BorderBrush="{StaticResource FontColorBrush}"
                BorderThickness="1"
                CornerRadius="10">
                <TextBlock
                    FontSize="16"
                    Padding="8"
                    FontWeight="Medium">
                    Тип отчёта
                </TextBlock>
            </Border>

            <components:StartPageButton
                Content="Стандартный отчёт"
                FontSize="13"
                Command="{Binding DefaultReportCommand}"/>

            <components:StartPageButton
                Content="Топливный отчёт"
                FontSize="13"
                Command="{Binding GasReportChosenCommand}"/>

            <components:StartPageButton
                Content="Топливный + стандартный отчёт"
                FontSize="13"
                Command="{Binding GasAndDefaultReportChosenCommand}"/>
        </StackPanel>
        
        <Border
            Grid.Column="1"
            BorderBrush="{StaticResource FontColorBrush}"
            BorderThickness="1 0 0 0"
            CornerRadius="10">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="32" />
                </Grid.RowDefinitions>
            
                <StackPanel
                    Margin="0 32 0 0">

                    <Image
                        Source=".\..\..\..\Imgs\StartPageReportIcon.png"
                        Width="128" />

                    <TextBlock
                        FontSize="48"
                        HorizontalAlignment="Center"
                        FontWeight="Bold">
                        Отчётник
                    </TextBlock>

                    <TextBlock
                        FontSize="18"
                        Margin="0 8 0 0"
                        HorizontalAlignment="Center"
                        FontWeight="DemiBold">
                        Приложение для логистических отчётов
                    </TextBlock>

                </StackPanel>

                <TextBlock
                    Grid.Row="1"
                    
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Margin="0 0 10 0">
                    Версия 0.1
                </TextBlock>

                <TextBlock
                    Grid.Row="1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Margin="10 00 0 0">
                    made by chysen
                </TextBlock>

            </Grid>
            
        </Border>
        
    </Grid>
</Page>
